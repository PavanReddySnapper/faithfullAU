<div class="cart-page" data-section-id="{{ section.id }}" data-section-type="main-cart">
  <div class="container container--sm">
    <div id="react-cart-page">
      {% # Cart Template Skeleton %}
      <div class="cart-page__skeleton">
        <div class="cart__app{% if cart.empty? %} cart__app--empty{% endif %}">
          {%- if cart.empty? -%}
            <div class="cart__content cart__content--empty">
              <h2 class="h3">{{ 'cart.general.empty.title' | t }}</h2>

              {%- assign empty_message = 'cart.general.empty.text' | t -%}
              {%- if empty_message != blank -%}
                <p>{{ empty_message }}</p>
              {%- endif -%}

              <a href="{{ settings.cart_continue_shopping_link }}" class="btn btn--secondary">
                {{ 'cart.general.empty.continue_shopping' | t }}
              </a>
            </div>

          {%- else -%}
            <div class="cart__header">
              <h1 class="h6">{{ 'cart.general.title' | t }} ({{ cart.item_count }})</h1>
            </div>
            <div class="cart__container">
              <div class="cart__content">
                <div class="cart__free-shipping">
                  <div class="cart__progress">
                    <div class="cart__progress-bar"></div>
                  </div>
                  <p class="h6">&nbsp;</p>
                </div>

                <ul class="cart__cart-items list-none">
                  {%- for line_item in cart.items -%}
                    <li>
                      <div class="cart-item body-medium">
                        <div class="cart-item__image aspect-ratio aspect-ratio--portrait" href="{item.url}"></div>

                        <div class="cart-item__content">
                          <div class="cart-item__info">
                            <p class="cart-item__title">&nbsp;</p>
                          </div>

                          <div class="cart-item__quantity"></div>

                          <p class="cart-item__prices">&nbsp;</p>
                        </div>
                      </div>
                    </li>
                  {%- endfor -%}
                </ul>

                <div class="cart__note">&nbsp;</div>
              </div>

              <div class="cart__footer">
                <div class="cart__footer-grid">
                  <div class="cart__subtotal h6">
                    <span>&nbsp;</span>
                    <span>&nbsp;</span>
                  </div>
                  <div class="cart__checkout h6">&nbsp;</div>
                </div>
              </div>

              {%- if settings.custom_message_enabled and settings.custom_message != blank -%}
                <p class="cart__page-message">&nbsp;</p>
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>

{% render 'vite-tag' with '@/scripts/sections/main-cart.js' %}

{% schema %}
{
"name": "Return Redirects",
"settings": [
{
"type": "text",
"id": "heading",
"label": "Heading",
"default": "Your Heading"
},
{
"type": "text",
"id": "btn1_text",
"label": "Button 1 Text",
"default": "Learn More"
},
{
"type": "url",
"id": "btn1_link",
"label": "Button 1 Link",
"default": "/"
},
{
"type": "text",
"id": "btn2_text",
"label": "Button 2 Text",
"default": "Shop Now"
},
{
"type": "url",
"id": "btn2_link",
"label": "Button 2 Link",
"default": "/"
},
{
"type": "richtext",
"id": "description",
"label": "Small Text",
"default": "<p>This is a description or additional information.</p>"
}
],
"presets": [
{
"name": "Return Redirects",
"category": "Custom"
}
]
}
{% endschema %}

<div class="dynamic-section">
  <h2>{{ section.settings.heading }}</h2>

  <div class="button-group">
    <a href="{{ section.settings.btn1_link }}" class="btn">{{ section.settings.btn1_text }}</a>
    <a href="{{ section.settings.btn2_link }}" target="_blank" class="btn">{{ section.settings.btn2_text }}</a>
  </div>

  <div class="description">
    {{ section.settings.description }}
  </div>
</div>

<style>
  .dynamic-section {
      text-align: center;
      margin: 20px 0;
      height: 40vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding:30px 0px;
      justify-content: flex-start;
  }
  .dynamic-section h2{
      margin-bottom: 2rem;
  }
  .dynamic-section .button-group {
      display: flex;
      justify-content: center;
      gap: 30px;
      margin: 15px 0;
  }
  .dynamic-section .btn {
      padding: 10px 30px;
      text-decoration: none;
      background-color: transparent;
      color: black;
      word-break: break-word;
      white-space: break-spaces;
      width: 270px;
  }
  .dynamic-section .btn:hover {
      background-color: black;
      color: white;
  }
  .dynamic-section .description {
      font-size: 14px;
      color: black;
      margin-top: 10px;
  }
  .dynamic-section .description p{
      font-size: 12px;
  }
  .dynamic-section .description p a{
      text-decoration: underline;
  }
</style>
